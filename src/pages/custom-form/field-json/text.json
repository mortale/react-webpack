{
  "type": "object",
  "properties": {
    "basicGroup": {
      "type": "void",
      "x-component": "FormGroup",
      "x-component-props": {
        "title": "基本设置"
      },
      "properties": {
        "title": {
          "title": "字段名称",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "initialValue": "文本",
          "x-component-props": {
            "maxLength": 20
          },
          "x-validator": {
            "required": true,
            "customFieldsRules": true
          }
        },
        "id": {
          "title": "字段编码",
          "required": true,
          "x-decorator": "FormItem",
          "x-component": "Input",
          "x-visible": "{{!!$self.value}}"
      
        },
        "description": {
          "title": "描述",
          "x-decorator": "FormItem",
          "x-component": "TextArea",
          "x-component-props": {
            "maxLength": 100,
            "placeholder": "不超过100个字符",
            "autoSize": {
              "minRows": 2,
              "maxRows": 6
            },
            "width": "100%"
          }
        },
        "type": {
          "title": "字段类型",
          "required": true,
          "x-decorator": "FormItem",
          "x-component": "Select",
          "x-disabled": "{{$published}}",
          "x-data": {
            "contorlTrigger": "onChange"
          },
          "x-reactions": {
            "effects": [
              "onFieldInputValueChange"
            ],
            "fulfill": {
              "run": "typeEffect($self)"
            }
          },
          "initialValue": "TEXT",
          "enum": [
            {
              "value": "TEXT",
              "label": "文本"
            },
            {
              "value": "TEXTAREA",
              "label": "文本域"
            },
            {
              "value": "NUMBER",
              "label": "数值"
            },
            {
              "value": "DATE",
              "label": "日期"
            },
            {
              "value": "SELECT",
              "label": "选择"
            }
          ]
        },
        "placeholder": {
          "title": "输入提示",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "initialValue": "请输入",
          "x-component-props": {
            "placeholder": "请输入"
          }
        },
        "valueRule>maxLength": {
          "title": "字段长度",
          "required": true,
          "x-decorator": "FormItem",
          "x-component": "Input",
          "initialValue": "20"
        }
      }
    },
    "statusGroup": {
      "type": "void",
      "x-component": "FormGroup",
      "x-component-props": {
        "title": "状态"
      },
      "properties": {
        "statusInfo>statusType": {
          "title": "字段状态",
          "x-decorator": "FormItem",
          "x-component": "Radio",
          "initialValue": "EDITABLE",
          "x-component-props": {
            "isCompose": true
          },
          "enum": [
            {
              "label": "普通",
              "value": "EDITABLE"
            },
            {
              "label": "只读",
              "value": "READONLY"
            },
            {
              "label": "隐藏",
              "value": "HIDDEN"
            }
          ],
          "x-reactions": {
            "fulfill": {
              "run": "statusTypeChangeEffect($self,{'READONLY':{'nonEditableInfo':'statusInfo>readonlyInfo'},'HIDDEN':{'nonEditableInfo':'statusInfo>hiddenInfo'}})"
            }
          },
          "x-validator": {
            "customFieldsRules": true
          }
        },
        "statusInfo>readonlyInfo": {
          "title": "默认值",
          "x-decorator": "FormItem",
          "x-component": "NonEditableInfoSetter",
          "x-visible": "{{$values['statusInfo>statusType'] === 'READONLY'}}",
          "x-validator": {
            "customFieldsRules": true
          },
          "x-reactions": {
            "dependencies":["statusInfo>statusType"],
            "when": "{{!$self.visible && $deps[0] === 'READONLY'}}",
            "fulfill": {
              "run": "$self.setValue(statusInfo.nonEditableInfo),$form.notify('onFormInputChange')"
            }
          }
        },
        "statusInfo>hiddenInfo": {
          "title": "默认值",
          "x-decorator": "FormItem",
          "x-component": "NonEditableInfoSetter",
          "x-visible": "{{$values['statusInfo>statusType'] === 'HIDDEN'}}",
          "x-validator": {
            "customFieldsRules": true
          },
          "x-reactions": {
            "dependencies":["statusInfo>statusType"],
            "when": "{{!$self.visible && $deps[0] === 'HIDDEN'}}",
            "fulfill": {
              "run": "$self.setValue(statusInfo.nonEditableInfo),$form.notify('onFormInputChange')"
            }
          }
        }
      }
    },
    "valueRuleGroup": {
      "type": "void",
      "x-component": "FormGroup",
      "x-visible": "{{$values['statusInfo>statusType']==='EDITABLE'}}",
      "x-component-props": {
        "title": "校验与错误提示"
      },
      "properties": {
        "valueRule>required": {
          "title": "必填",
          "x-decorator": "FormItem",
          "x-component": "Checkbox",
          "x-visible": "{{$values['statusInfo>statusType']==='EDITABLE'}}",
          "initialValue": false
        },
        "valueRule>requiredErrorMsg": {
          "title": "错误提示",
          "required": true,
          "x-decorator": "FormItem",
          "x-component": "Input",
          "initialValue": "字段必填",
          "default": "字段必填",
          "x-visible": "{{!!$values['valueRule>required']}}"
        }
      }
    }
  }
}